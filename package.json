{
  "name": "@wlindabla/event_dispatcher",
  "version": "1.0.1",
  "description": "A flexible, Symfony-inspired event dispatcher for JavaScript & TypeScript with optimized implementations for Browser and Node.js environments",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "keywords": [
    "event",
    "dispatcher",
    "event-dispatcher",
    "eventemitter",
    "events",
    "symfony",
    "pub-sub",
    "observer",
    "browser",
    "nodejs",
    "typescript"
  ],
  "author": "AGBOKOUDJO Franck <internationaleswebservices@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Agbokoudjo/event_dispatcher.git"
  },
  "bugs": {
    "url": "https://github.com/Agbokoudjo/event_dispatcher/issues"
  },
  "homepage": "https://github.com/Agbokoudjo/event_dispatcher#readme",
  "packageManager": "yarn@4.12.0",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "@types/node": {
      "optional": true
    }
  },
  "peerDependencies": {
    "@types/node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./browser": {
      "import": {
        "types": "./dist/implementations/BrowserEventDispatcher.d.ts",
        "default": "./dist/implementations/BrowserEventDispatcher.mjs"
      },
      "require": {
        "types": "./dist/implementations/BrowserEventDispatcher.d.ts",
        "default": "./dist/implementations/BrowserEventDispatcher.js"
      }
    },
    "./node": {
      "import": {
        "types": "./dist/implementations/NodeEventDispatcher.d.ts",
        "default": "./dist/implementations/NodeEventDispatcher.mjs"
      },
      "require": {
        "types": "./dist/implementations/NodeEventDispatcher.d.ts",
        "default": "./dist/implementations/NodeEventDispatcher.js"
      }
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "yarn build && yarn test && yarn lint",
    "release": "yarn build && changeset publish",
    "prepare": "yarn build"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/express": "^5.0.6",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "express": "^5.2.1",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
